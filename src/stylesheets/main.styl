backgroundcolor = #1C283B
buttonbg = rgba(28,40,59,0.3)
buttontxt = rgba(214,132,45,0.35)
foregroundcolor = #D6842D
divcolor = #D6842D

*:focus
  outline none


body
  background-color backgroundcolor
  color foregroundcolor

div#bar
  position absolute
  bottom 100px
  display flex
  z-index 9999
  width 100%
  flex-direction row
  justify-content center


button#centerMap
  background-color buttonbg
  border 1px solid buttontxt
  color buttontxt
  font-size 1em
  border-radius 5px
  box-sizing content-box;
  padding 0
  width 200px
  height 50px
  align-self center

button#centerMap:hover
  border-color foregroundcolor
  background-color backgroundcolor
  color foregroundcolor

#preloader
  width 100%
  margin 0 auto
  background-color backgroundcolor
  display flex
  justify-content center
  align-items center
  opacity 1
  transition opacity 2s
  z-index 9999

#preloader.hidden
  opacity 0
  pointer-events none

#preloader img
  height 64px
  width 64px


div
  padding 0
  width 80%

div#menu
  position absolute
  top 15px
  right 15px
  width 30px
  z-index 9998

div#map
  position absolute
  top 0
  bottom 0
  width 100%
  z-index 9997
